    "quotes",
    "pricing",
    "management",
    "react",
    "nodejs"
  ],
  "author": "Quote Manager",
  "license": "MIT",
  "dependencies": {
    "@emailjs/browser": "^3.11.0",
    "@sparticuz/chromium": "^123.0.1",
    "@supabase/supabase-js": "^2.56.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "puppeteer-core": "^22.6.3",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
